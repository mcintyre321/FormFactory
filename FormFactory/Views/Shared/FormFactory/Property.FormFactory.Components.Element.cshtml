@using System.Text
@using FormFactory
@using FormFactory.AspMvc
@using FormFactory.Components
@model PropertyVm
@{
    var model = (Element) Model.Value;
    var sb = new StringBuilder();
    sb.Append("<" + model.TagName);
    foreach (var modelAttribute in model.Attributes)
    {
        sb.Append(" " + modelAttribute.Key + "=\"" + modelAttribute.Value + "\"");//TOdo: escaping
    }
    sb.Append(">");
    sb.Append(model.Value);
    sb.Append($"</{model.TagName}>");

    @Html.Raw(sb);
}
